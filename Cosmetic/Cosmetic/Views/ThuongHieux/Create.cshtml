@model Cosmetic.Models.ThuongHieu

@{
    ViewData["Title"] = "| Thêm thương hiệu";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm mới<small>  | Thương hiệu</small></h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TenHieu" class="control-label"></label>
                <input asp-for="TenHieu" class="form-control" />
                <span asp-validation-for="TenHieu" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="Hinh" class="control-label"></label>
                    <input name="fHinh" type="file" class="form-control " />
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay về</a>
</div>

