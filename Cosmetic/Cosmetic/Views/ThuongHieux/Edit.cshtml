@model Cosmetic.Models.ThuongHieu

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>Cập nhật<small>  | Thương hiệu</small></h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="MaHieu" />
            <div class="form-group">
                <label asp-for="TenHieu" class="control-label"></label>
                <input asp-for="TenHieu" class="form-control" />
                <span asp-validation-for="TenHieu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hinh" class="control-label"></label>
                <img src="~/Hinh/beauty/@Model.Hinh" height="100" />
                <input name="fHinh" type="file" class="form-control " />
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay về</a>
</div>

