@{
    ViewData["Title"] = "Công cụ đọc RSS feed";
    Layout = "~/Views/Shared/_Frontend.cshtml";
}
    <br />  
    <h2>Công cụ đọc RSS Feed</h2>  
    <hr />  
    <br />  
    @using (Html.BeginForm())  
    {  
        <input type="URL" name="RSSURL" placeholder="Đặt URL vào đây..." class="form-control" value="@ViewBag.URL" style="min-width:100%" />  
        <br />  
        <input type="submit" class="btn btn-danger" value="Đọc RSS Feed" />  
    }  
    <table class="table table-hover">  
        <thead>  
            <tr>  
                <th>Tựa đề</th>  
                <th>Liên kết</th>  
                <th>Mô tả</th>  
                <th>Ngày đăng</th>  
            </tr>  
        </thead>  
        <tbody>  
            @if (ViewBag.RSSFeed != null)  
            {  
                foreach (var item in ViewBag.RSSFeed)  
                {  
                    <tr>  
                        <td>@item.Title </td>  
                        <td><a href="@item.Link">@item.Link</a></td>  
                        <td>@item.Description</td>  
                        <td>@item.PubDate</td>  
                    </tr>  
                }  
            }  
        </tbody>  
    </table>  
