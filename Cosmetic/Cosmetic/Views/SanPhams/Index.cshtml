@model IEnumerable<Cosmetic.Models.SanPham>

@{
    ViewData["Title"] = "| Sản phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Sản phẩm</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <p>
            <a asp-action="Create">Thêm mới</a>
        </p>
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.MaSp)</th>
                            <th>@Html.DisplayNameFor(model => model.TenSp)</th>
                            <th>@Html.DisplayNameFor(model => model.MaLoai)</th>
                            <th>@Html.DisplayNameFor(model => model.MoTa)</th>
                            <th>@Html.DisplayNameFor(model => model.DonGia)</th>
                            <th>@Html.DisplayNameFor(model => model.Hinh)</th>
                            <th>@Html.DisplayNameFor(model => model.Hinh2)</th>
                            <th>@Html.DisplayNameFor(model => model.GiaCu)</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="odd gradeX">
                                <td>@Html.DisplayFor(modelItem => item.MaSp)</td>
                                <td>@Html.DisplayFor(modelItem => item.TenSp)</td>
                                <td>@Html.DisplayFor(modelItem => item.MaLoai)</td>
                                <td>@Html.DisplayFor(modelItem => item.MoTa)</td>
                                <td>@Html.DisplayFor(modelItem => item.DonGia)</td>
                                <td><img style="height: 100px; width: 100px" src="~/Hinh/beauty/@item.Hinh" /></td>
                                <td><img style="height: 100px; width: 100px" src="~/Hinh/beauty/@item.Hinh2" /></td>
                                <td>@Html.DisplayFor(modelItem => item.GiaCu)</td>
                                <td><a asp-action="Edit" asp-route-id="@item.MaSp">Cập nhật</a></td>
                                <td><a asp-action="Delete" asp-route-id="@item.MaSp">Xóa</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
