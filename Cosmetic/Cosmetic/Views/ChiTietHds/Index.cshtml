@model IEnumerable<Cosmetic.Models.ChiTietHd>

@{
    ViewData["Title"] = "| Chi tiết hóa đơn";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Chi tiết hóa đơn </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.MaHd)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MaSp)
                            </th>
                            <th>
                                Tên sản phẩm
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DonGia)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SoLuong)
                            </th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    @{ double? tongtien = 0; }
                    <tbody>
                        @foreach (var item in Model)
                        {
                            tongtien += item.DonGia * item.SoLuong;
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MaHd)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MaSp)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MaSpNavigation.TenSp)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DonGia)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SoLuong)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.MaCt">Cập nhật</a>
                                </td>
                                <td>
                                    <a asp-action="Delete" asp-route-id="@item.MaCt">Xóa</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <!-- /.table-responsive -->
                <pre><b>Tổng hóa đơn: @tongtien.Value.ToString("#,##0") VNĐ</b></pre>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<a asp-controller="HoaDons" asp-action="Index">Quay về</a>

