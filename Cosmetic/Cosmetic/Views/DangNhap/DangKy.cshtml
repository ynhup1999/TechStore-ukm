@*@model Cosmetic.Models.KhachHang*@
@model Cosmetic.Models.RegisterModel
@{
    ViewData["Title"] = "DangKy";
    Layout = "~/Views/Shared/_Frontend.cshtml";
}
<div id="content">
    <div class="container">
        <hr />
        <div class="row">
            <div class="col-md-12">
                <div class="baotodangkythanhvienmoi">
                    <h2>Đăng ký tài khoản mới</h2>
                    <div>
                        @if (ViewBag.Success != null)
                        {
                            <div class="alert alert-success">@ViewBag.Success</div>
                        }


                    </div>
                    <form asp-action="DangKy">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="UserName" class="control-label"></label>
                            <input asp-for="UserName" class="form-control" required="required" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PassWord" class="control-label"></label>
                            <input asp-for="PassWord" class="form-control" type="password" required="required" />
                            <span asp-validation-for="PassWord" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" required="required" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="GioiTinh" class="control-label"></label>
                            <input asp-for="GioiTinh" class="" style="width:20px;height:20px;transform:translateY(6px);margin:0px 10px" type="radio" value="False" checked /> Nam
                            <input asp-for="GioiTinh" class="" style="width:20px;height:20px;transform:translateY(6px);margin:0px 10px" type="radio" value="True" /> Nữ
                            <span asp-validation-for="GioiTinh" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NgaySinh" class="control-label"></label>
                            <input asp-for="NgaySinh" class="form-control" type="date" required="required" />
                            <span asp-validation-for="NgaySinh" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Diachi" class="control-label"></label>
                            <input asp-for="Diachi" class="form-control" required="required" />
                            <span asp-validation-for="Diachi" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Phonenumer" class="control-label"></label>
                            <p>+84<input asp-for="Phonenumer" class="form-control" required="required" /><p>
                                <span asp-validation-for="Phonenumer" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" required="required" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        @*<div class="form-group" style="display:none">
                                <label asp-for="HieuLuc" class="control-label"></label>
                                <input asp-for="HieuLuc" class="form-control" />
                                <span asp-validation-for="HieuLuc" class="text-danger"></span>
                            </div>*@
                        @*<div class="form-group" style="display:none">
                                <label asp-for="VaiTro" class="control-label"></label>
                                <input asp-for="VaiTro" class="form-control" />
                                <span asp-validation-for="VaiTro" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="RandomKey" class="control-label" style="display:none"></label>
                                <input asp-for="RandomKey" class="form-control" type="hidden" />
                                <span asp-validation-for="RandomKey" class="text-danger"></span>
                            </div>*@
                        <div class="form-group">
                            <a asp-action="../Home/Index"><button class="btn btn-danger">  Về trang chủ</button></a>
                            <input type="submit" asp-action="DangKy" asp-controller="DangNhap" value="Tạo tài khoản" class="btn btn-success" />
                        </div>
                        <div>
                            <p style="font-style:italic; color:deeppink">@ViewBag.Result</p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>