@{
    ViewData["Title"] = "KhachHang";
    Layout = "~/Views/Shared/_Frontend.cshtml";
    KhachHang kh = Context.Session.Get<KhachHang>("TaiKhoan");
}

<div id="content">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!-- breadcrumb-->
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                        <li aria-current="page" class="breadcrumb-item active">Tài khoản</li>
                    </ol>
                </nav>
            </div>
            <div class="col-lg-3">
                <!--
                *** CUSTOMER MENU ***
                _________________________________________________________
                -->
                <div class="card sidebar-menu">
                    <div class="card-header">
                        <h3 class="h4 card-title">Khách Hàng</h3>
                    </div>
                    <div class="card-body">
                        <ul class="nav nav-pills flex-column"><a class="nav-link"><i class="fa fa-list"></i>Hóa đơn của bạn</a><a asp-action="Index" asp-controller="YeuThich" class="nav-link"><i class="fa fa-heart"></i> Sản phẩm yêu thích</a><a asp-action="Index" asp-controller="KhachHang" class="nav-link active"><i class="fa fa-user"></i>Tài khoản</a><a asp-action="DangXuat" asp-controller="DangNhap" class="nav-link"><i class="fa fa-sign-out"></i> Đăng xuất</a></ul>
                    </div>
                </div>
                <!-- /.col-lg-3-->
                <!-- *** CUSTOMER MENU END ***-->
            </div>
            <div class="col-lg-9">
                <div class="box">
                    
                    <p class="lead">Bạn có thể thay đổi mật khẩu</p>
                    <p class="text-muted"></p>

                    <h3>Thay đổi mật khẩu</h3>
                    <form asp-action="DoiMK" asp-controller="KhachHang" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="password_old">Tài khoản</label>
                                    <input name="taikhoan" value="@kh.MaKh" type="text" class="form-control"  disabled>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="password_old">Mật khẩu cũ</label>
                                    <input name="nhapmkcu" type="password" class="form-control" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="password_1">Nhập mật khẩu mới *</label>
                                    <input name="nhapmk" type="password" class="form-control" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="password_2">Nhập lại mật khẩu mới *</label>
                                    <input name="nhaplaimk" type="password" class="form-control" required>
                                </div>
                                <div asp-validation-summary="All" class="text-danger"></div>
                            </div>
                        </div>
                        <!-- /.row-->
                        <div class="col-md-12 text-center">
                            <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Thay đổi mật khẩu</button>
                        </div>
                        <p style="font-style:italic; color:deeppink">@ViewBag.Result                            
                        </p>
                    </form>
                    
                    

                </div>
            </div>
        </div>
    </div>
</div>
