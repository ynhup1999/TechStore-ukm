@model IEnumerable<Cosmetic.Models.HoaDon>

@{
    ViewData["Title"] = "| Hóa đơn";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Hóa đơn</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.MaHd)</th>
                            <th>@Html.DisplayNameFor(model => model.TenNgNhan)</th>
                            <th>@Html.DisplayNameFor(model => model.DtngNhan)</th>
                            <th>@Html.DisplayNameFor(model => model.DiaChiNgNhan)</th>
                            <th>@Html.DisplayNameFor(model => model.NgayDat)</th>
                            <th>@Html.DisplayNameFor(model => model.MaOnline)</th>
                            <th>@Html.DisplayNameFor(model => model.MaTrangThai)</th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.MaHd)</td>
                            <td>@Html.DisplayFor(modelItem => item.TenNgNhan)</td>
                            <td>@Html.DisplayFor(modelItem => item.DtngNhan)</td>
                            <td>@Html.DisplayFor(modelItem => item.DiaChiNgNhan)</td>
                            <td>@Html.DisplayFor(modelItem => item.NgayDat)</td>
                            <td>@Html.DisplayFor(modelItem => item.MaOnline)</td>
                            @if (item.MaTrangThai == 0)
                            {
                                <td>Chờ xác nhận</td>
                            }
                            else if (item.MaTrangThai == 1)
                            {
                                <td>Đang chuẩn bị hàng</td>
                            }
                            else if (item.MaTrangThai == 2)
                            {
                                <td>Đang giao hàng</td>
                            }
                            else
                            {
                                <td>Đã giao hàng</td>
                            }
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.MaHd">Cập nhật</a>
                            </td>
                            <td>
                                <a asp-controller="ChiTietHds" asp-action="Index" asp-route-id="@item.MaHd">Chi tiết</a> 
                            </td>
                            <td>
                                <a asp-action="Delete" asp-route-id="@item.MaHd">Xóa</a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->