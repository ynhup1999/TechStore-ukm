@model IEnumerable<Cosmetic.Models.BinhLuan>

@{
    ViewData["Title"] = "| Bình luận";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Bình luận</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.NgayBl)</th>
                            <th>@Html.DisplayNameFor(model => model.MaKh)</th>
                            <th>@Html.DisplayNameFor(model => model.HoTen)</th>
                            <th>@Html.DisplayNameFor(model => model.MaSp)</th>
                            <th>@Html.DisplayNameFor(model => model.MaSpNavigation.TenSp)</th>
                            <th>@Html.DisplayNameFor(model => model.NoiDung)</th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.NgayBl)</td>
                            <td>@Html.DisplayFor(modelItem => item.MaKh)</td>
                            <td>@Html.DisplayFor(modelItem => item.HoTen)</td>
                            <td>@Html.DisplayFor(modelItem => item.MaSp)</td>
                            <td>@Html.DisplayFor(modelItem => item.MaSpNavigation.TenSp)</td>
                            <td>@Html.DisplayFor(modelItem => item.NoiDung)</td>
                            <td><a asp-action="Delete" asp-route-id="@item.MaBl">Xóa</a></td>
                        </tr>
                        }
                    </tbody>
                </table>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->